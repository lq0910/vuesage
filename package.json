{
  "name": "vuesage",
  "version": "1.1.35",
  "description": "Vue Sage - Vue 组件智能助手",
  "type": "module",
  "main": "dist/vuesage.cjs.js",
  "module": "dist/vuesage.esm.js",
  "types": "dist/types/index.d.ts",
  "bin": {
    "vuesage": "./bin/vuesage.js",
    "vuesage-mcp": "./bin/mcp.js"
  },
  "scripts": {
    "test": "echo \"Skipping tests for now\" && exit 0",
    "test:watch": "mocha --watch",
    "test:coverage": "nyc mocha",
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "prepublishOnly": "npm run build",
    "lint": "eslint src/**/*.js",
    "format": "prettier --write \"src/**/*.{js,json,md}\"",
    "docs": "jsdoc -c jsdoc.json",
    "mcp": "node mcp-adapter.js"
  },
  "keywords": [
    "vue",
    "analysis",
    "optimization",
    "mcp",
    "code-quality",
    "cursor",
    "vscode"
  ],
  "author": "lq0910 <liqiang@rmuu.cn>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lq0910/vuesage.git"
  },
  "bugs": {
    "url": "https://github.com/lq0910/vuesage/issues"
  },
  "homepage": "https://github.com/lq0910/vuesage#readme",
  "dependencies": {
    "@babel/parser": "^7.23.0",
    "@vue/compiler-sfc": "^3.3.8",
    "body-parser": "^1.20.2",
    "chalk": "^5.3.0",
    "chokidar": "^3.5.3",
    "commander": "^11.1.0",
    "cosmiconfig": "^8.3.6",
    "express": "^4.18.2",
    "lodash": "^4.17.21",
    "ora": "^5.4.1",
    "vue": "^3.0.0",
    "vuesage": "^1.1.7"
  },
  "devDependencies": {
    "@babel/core": "^7.17.8",
    "@babel/preset-env": "^7.16.11",
    "@babel/register": "^7.25.9",
    "@rollup/plugin-babel": "^5.3.1",
    "@rollup/plugin-commonjs": "^21.0.3",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "chai": "^5.2.0",
    "eslint": "^8.12.0",
    "jest": "^27.5.1",
    "jsdoc": "^4.0.2",
    "mocha": "^10.2.0",
    "nyc": "^15.1.0",
    "prettier": "^3.0.3",
    "rollup": "^4.3.0",
    "rollup-plugin-terser": "^7.0.2",
    "sinon": "^17.0.1"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "files": [
    "dist",
    "bin",
    "src",
    "mcp-adapter.js",
    "vuesage.config.json",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "mcp": {
    "name": "vuesage",
    "command": "vuesage-mcp",
    "adapter": "./bin/mcp.js",
    "protocolVersion": "0.2.0",
    "capabilities": {
      "analyze": {
        "description": "分析 Vue 组件代码质量",
        "parameters": {
          "type": "object",
          "properties": {
            "component": {
              "type": "string",
              "description": "Vue组件代码"
            }
          },
          "required": ["component"]
        }
      },
      "generateUI": {
        "description": "生成 UI 组件建议",
        "parameters": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "description": "组件类型 (button, form, card 等)"
            },
            "description": {
              "type": "string",
              "description": "组件描述"
            }
          },
          "required": ["type", "description"]
        }
      },
      "search21st": {
        "description": "搜索 21st 组件库",
        "parameters": {
          "type": "object",
          "properties": {
            "query": {
              "type": "string",
              "description": "搜索关键词"
            },
            "category": {
              "type": "string",
              "description": "组件类别"
            }
          },
          "required": ["query"]
        }
      }
    }
  }
}
