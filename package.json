{
  "name": "vuesage",
  "version": "1.1.0",
  "description": "基于 MCP (Model-Code-Prompt) 的 Vue 组件智能分析与优化引擎，提供代码质量分析、自动修复和最佳实践建议",
  "main": "src/index.js",
  "type": "module",
  "bin": {
    "vuesage": "./bin/vuesage.js"
  },
  "scripts": {
    "test": "jest",
    "build": "rollup -c",
    "prepublishOnly": "npm run build",
    "lint": "eslint src/**/*.js",
    "format": "prettier --write \"src/**/*.{js,json,md}\"",
    "docs": "jsdoc -c jsdoc.json"
  },
  "keywords": [
    "vue",
    "analyzer",
    "optimization",
    "code-quality",
    "vue-components",
    "static-analysis",
    "auto-fix",
    "mcp",
    "cursor-editor",
    "ai",
    "code-review",
    "best-practices",
    "vue3"
  ],
  "author": "lq0910 <liqiang0910@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lq0910/vuesage.git"
  },
  "bugs": {
    "url": "https://github.com/lq0910/vuesage/issues"
  },
  "homepage": "https://github.com/lq0910/vuesage#readme",
  "dependencies": {
    "vue": "^3.0.0",
    "express": "^4.18.2",
    "body-parser": "^1.20.2",
    "@babel/parser": "^7.23.0",
    "@vue/compiler-sfc": "^3.3.0",
    "chalk": "^5.3.0",
    "commander": "^11.0.0",
    "cosmiconfig": "^8.3.6"
  },
  "devDependencies": {
    "@babel/core": "^7.15.0",
    "@babel/preset-env": "^7.15.0",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^20.0.0",
    "@rollup/plugin-node-resolve": "^13.0.4",
    "jest": "^27.0.6",
    "rollup": "^2.56.3",
    "rollup-plugin-terser": "^7.0.2",
    "eslint": "^8.50.0",
    "prettier": "^3.0.3",
    "jsdoc": "^4.0.2"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "files": [
    "dist",
    "src",
    "bin",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
