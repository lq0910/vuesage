{
  "name": "vuesage",
  "version": "1.1.7",
  "description": "基于 MCP (Model-Code-Prompt) 的 Vue 组件智能分析与优化引擎，提供代码质量分析、自动修复和最佳实践建议",
  "type": "module",
  "main": "dist/vuesage.cjs.js",
  "module": "dist/vuesage.esm.js",
  "types": "dist/types/index.d.ts",
  "bin": {
    "vuesage": "bin/vuesage.js"
  },
  "scripts": {
    "test": "mocha",
    "test:watch": "mocha --watch",
    "test:coverage": "nyc mocha",
    "build": "rollup -c",
    "prepublishOnly": "npm run build",
    "lint": "eslint src/**/*.js",
    "format": "prettier --write \"src/**/*.{js,json,md}\"",
    "docs": "jsdoc -c jsdoc.json"
  },
  "keywords": [
    "vue",
    "analyzer",
    "optimization",
    "code-quality",
    "vue-components",
    "static-analysis",
    "auto-fix",
    "mcp",
    "cursor-editor",
    "ai",
    "code-review",
    "best-practices",
    "vue3",
    "linter",
    "fixer",
    "quality",
    "cli"
  ],
  "author": "lq0910 <liqiang0910@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lq0910/vuesage.git"
  },
  "bugs": {
    "url": "https://github.com/lq0910/vuesage/issues"
  },
  "homepage": "https://github.com/lq0910/vuesage#readme",
  "dependencies": {
    "@babel/parser": "^7.23.0",
    "@vue/compiler-sfc": "^3.3.0",
    "body-parser": "^1.20.2",
    "chalk": "^5.3.0",
    "chokidar": "^3.5.3",
    "commander": "^9.0.0",
    "cosmiconfig": "^8.3.6",
    "express": "^4.18.2",
    "lodash": "^4.17.21",
    "ora": "^5.4.1",
    "vue": "^3.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.17.8",
    "@babel/preset-env": "^7.16.11",
    "@babel/register": "^7.25.9",
    "@rollup/plugin-babel": "^5.3.1",
    "@rollup/plugin-commonjs": "^21.0.3",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "chai": "^5.2.0",
    "eslint": "^8.12.0",
    "jest": "^27.5.1",
    "jsdoc": "^4.0.2",
    "mocha": "^10.8.2",
    "nyc": "^15.1.0",
    "prettier": "^3.0.3",
    "rollup": "^2.70.1",
    "rollup-plugin-terser": "^7.0.2",
    "sinon": "^17.0.1"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "files": [
    "dist",
    "src",
    "bin",
    "README.md",
    "LICENSE",
    "mcp.json"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
